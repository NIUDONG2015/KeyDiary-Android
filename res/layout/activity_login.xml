<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="6dp"
            layout="@layout/head_layout" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:background="@drawable/pager_logo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <EditText
                android:id="@+id/username_etv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/input_ex"
                android:ems="10"
                android:hint="注册邮箱"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:minHeight="44dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="@color/title" >
            </EditText>

            <EditText
                android:id="@+id/password_etv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/username_etv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_ex"
                android:ems="10"
                android:hint="密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:minHeight="44dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="@color/title" >
            </EditText>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/password_etv"
                android:layout_below="@id/password_etv"
                android:layout_marginRight="12dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/login_btn"
                android:gravity="center|center_horizontal"
                android:minHeight="40dp"
                android:minWidth="90dp"
                android:text="@string/login"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn" />
    </RelativeLayout>

</FrameLayout>